<%= form_for @asignacion_estado_alumno, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :alumno_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :alumno_id, Alumno.all, :id, :nombres, {prompt: true}) %>
    </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :semestre_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :semestre_id, Semestre.all, :id, :numero, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :periodo_lectivo_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :periodo_lectivo_id, PeriodoLectivo.all, :id, :numero, {prompt: true}) %>
  </div>
  <div class="control-group">
    <%= f.label :materia_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :materia_id, Materia.all, :id, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sede_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :sede_id, Sede.all, :id, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estado_alumno_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :estado_alumno_id, EstadoAlumno.all, :id, {prompt: true}) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asignacion_estado_alumnos_path, :class => 'btn' %>
  </div>
<% end %>
