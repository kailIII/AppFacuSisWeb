<%- model_class = Alumno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ci) %>:</strong></dt>
  <dd><%= @alumno.ci %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombres) %>:</strong></dt>
  <dd><%= @alumno.nombres %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellidos) %>:</strong></dt>
  <dd><%= @alumno.apellidos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fnac) %>:</strong></dt>
  <dd><%= @alumno.fnac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lnac) %>:</strong></dt>
  <dd><%= @alumno.lnac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @alumno.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @alumno.telefono %></dd>
  <dt><strong><%= model_class.human_attribute_name(:celular) %>:</strong></dt>
  <dd><%= @alumno.celular %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @alumno.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:est_civil) %>:</strong></dt>
  <dd><%= @alumno.est_civil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genero) %>:</strong></dt>
  <dd><%= @alumno.genero %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nacionalidad) %>:</strong></dt>
  <dd><%= @alumno.nacionalidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:procedencia) %>:</strong></dt>
  <dd><%= @alumno.procedencia %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              alumnos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alumno_path(@alumno), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alumno_path(@alumno),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
