<%- model_class = Alumno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ci) %></th>
      <th><%= model_class.human_attribute_name(:nombres) %></th>
      <th><%= model_class.human_attribute_name(:apellidos) %></th>
      <th><%= model_class.human_attribute_name(:fnac) %></th>
      <th><%= model_class.human_attribute_name(:lnac) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:telefono) %></th>
      <th><%= model_class.human_attribute_name(:celular) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:est_civil) %></th>
      <th><%= model_class.human_attribute_name(:genero) %></th>
      <th><%= model_class.human_attribute_name(:nacionalidad) %></th>
      <th><%= model_class.human_attribute_name(:procedencia) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= link_to alumno.id, alumno_path(alumno) %></td>
        <td><%= alumno.ci %></td>
        <td><%= alumno.nombres %></td>
        <td><%= alumno.apellidos %></td>
        <td><%= alumno.fnac %></td>
        <td><%= alumno.lnac %></td>
        <td><%= alumno.direccion %></td>
        <td><%= alumno.telefono %></td>
        <td><%= alumno.celular %></td>
        <td><%= alumno.email %></td>
        <td><%= alumno.est_civil %></td>
        <td><%= alumno.genero %></td>
        <td><%= alumno.nacionalidad %></td>
        <td><%= alumno.procedencia %></td>
        <td><%=l alumno.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_alumno_path(alumno), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      alumno_path(alumno),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_alumno_path,
            :class => 'btn btn-primary' %>
