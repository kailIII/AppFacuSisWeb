<%= form_for @asignacion_funcionario, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sede_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_funcionario, :sede_id, Sede.all, :id, :nombre, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :funcionario_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_funcionario, :funcionario_id, Funcionario.all, :id, :nombres, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cargo_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_funcionario, :cargo_id, Cargo.all, :id, :descripcion, {prompt: true}) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asignacion_funcionarios_path, :class => 'btn' %>
  </div>
<% end %>
