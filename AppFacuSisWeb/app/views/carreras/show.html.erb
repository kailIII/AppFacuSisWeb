<%- model_class = Carrera -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @carrera.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duracion) %>:</strong></dt>
  <dd><%= @carrera.duracion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:titulo_obtenido) %>:</strong></dt>
  <dd><%= @carrera.titulo_obtenido %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              carreras_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_carrera_path(@carrera), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              carrera_path(@carrera),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
