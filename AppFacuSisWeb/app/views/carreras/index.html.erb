<%- model_class = Carrera -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:duracion) %></th>
      <th><%= model_class.human_attribute_name(:titulo_obtenido) %></th>
      <th><%= model_class.human_attribute_name(:facultad_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @carreras.each do |carrera| %>
      <tr>
        <td><%= link_to carrera.id, carrera_path(carrera) %></td>
        <td><%= carrera.nombre %></td>
        <td><%= carrera.duracion %></td>
        <td><%= carrera.titulo_obtenido %></td>
        <td><%= carrera.facultad.completo %></td>
        <td><%=l carrera.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_carrera_path(carrera), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      carrera_path(carrera),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_carrera_path,
            :class => 'btn btn-primary' %>
