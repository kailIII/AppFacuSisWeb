<%= form_for @malla_curricular, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :plan_curricular_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :plan_curricular_id, PlanCurricular.all, :id, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :facultad_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :facultad_id, Facultad.all, :id, :nombre, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :curso_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :curso_id, Curso.all, :id, {prompt: true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :materia_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:asignacion_estado_alumno, :materia_id, Materia.all, :id, :nombre, {prompt: true}) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                malla_curriculars_path, :class => 'btn' %>
  </div>
<% end %>
