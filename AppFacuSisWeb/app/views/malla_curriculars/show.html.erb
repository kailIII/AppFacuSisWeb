<%- model_class = MallaCurricular -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:plan_curricular_id) %>:</strong></dt>
  <dd><%= @malla_curricular.plan_curricular_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facultad_id) %>:</strong></dt>
  <dd><%= @malla_curricular.facultad_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:curso_id) %>:</strong></dt>
  <dd><%= @malla_curricular.curso_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:materia_id) %>:</strong></dt>
  <dd><%= @malla_curricular.materia_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              malla_curriculars_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_malla_curricular_path(@malla_curricular), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              malla_curricular_path(@malla_curricular),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
