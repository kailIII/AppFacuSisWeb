<%= form_for @asignacion_docente, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :docente_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :docente_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :curso_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :curso_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :materia_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :materia_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dia_semanal_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :dia_semanal_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asignacion_docentes_path, :class => 'btn' %>
  </div>
<% end %>
