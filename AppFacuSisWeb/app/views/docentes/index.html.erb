<%- model_class = Docente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ci) %></th>
      <th><%= model_class.human_attribute_name(:nombres) %></th>
      <th><%= model_class.human_attribute_name(:apellidos) %></th>
      <th><%= model_class.human_attribute_name(:fnac) %></th>
      <th><%= model_class.human_attribute_name(:lnac) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:telefono) %></th>
      <th><%= model_class.human_attribute_name(:celular) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:est_civil) %></th>
      <th><%= model_class.human_attribute_name(:genero) %></th>
      <th><%= model_class.human_attribute_name(:nacionalidad) %></th>
      <th><%= model_class.human_attribute_name(:especialidad) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @docentes.each do |docente| %>
      <tr>
        <td><%= link_to docente.id, docente_path(docente) %></td>
        <td><%= docente.ci %></td>
        <td><%= docente.nombres %></td>
        <td><%= docente.apellidos %></td>
        <td><%= docente.fnac %></td>
        <td><%= docente.lnac %></td>
        <td><%= docente.direccion %></td>
        <td><%= docente.telefono %></td>
        <td><%= docente.celular %></td>
        <td><%= docente.email %></td>
        <td><%= docente.est_civil %></td>
        <td><%= docente.genero %></td>
        <td><%= docente.nacionalidad %></td>
        <td><%= docente.especialidad %></td>
        <td><%=l docente.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_docente_path(docente), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      docente_path(docente),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_docente_path,
            :class => 'btn btn-primary' %>
