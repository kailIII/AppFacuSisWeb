<%- model_class = Sede -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @sede.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:universidad_id) %>:</strong></dt>
  <dd><%= @sede.universidad.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facultad_id) %>:</strong></dt>
  <dd><%= @sede.facultad.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ciudad_id) %>:</strong></dt>
  <dd><%= @sede.ciudad.nombre %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sedes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sede_path(@sede), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sede_path(@sede),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
