<%- model_class = Funcionario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ci) %>:</strong></dt>
  <dd><%= @funcionario.ci %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombres) %>:</strong></dt>
  <dd><%= @funcionario.nombres %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellidos) %>:</strong></dt>
  <dd><%= @funcionario.apellidos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fnac) %>:</strong></dt>
  <dd><%= @funcionario.fnac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lnac) %>:</strong></dt>
  <dd><%= @funcionario.lnac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion) %>:</strong></dt>
  <dd><%= @funcionario.direccion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @funcionario.telefono %></dd>
  <dt><strong><%= model_class.human_attribute_name(:celular) %>:</strong></dt>
  <dd><%= @funcionario.celular %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @funcionario.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:est_civil) %>:</strong></dt>
  <dd><%= @funcionario.est_civil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genero) %>:</strong></dt>
  <dd><%= @funcionario.genero %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nacionalidad) %>:</strong></dt>
  <dd><%= @funcionario.nacionalidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especialidad) %>:</strong></dt>
  <dd><%= @funcionario.especialidad %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              funcionarios_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_funcionario_path(@funcionario), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              funcionario_path(@funcionario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
