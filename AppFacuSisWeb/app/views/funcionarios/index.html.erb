<%- model_class = Funcionario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ci) %></th>
      <th><%= model_class.human_attribute_name(:nombres) %></th>
      <th><%= model_class.human_attribute_name(:apellidos) %></th>
      <th><%= model_class.human_attribute_name(:fnac) %></th>
      <th><%= model_class.human_attribute_name(:lnac) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:telefono) %></th>
      <th><%= model_class.human_attribute_name(:celular) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:est_civil) %></th>
      <th><%= model_class.human_attribute_name(:genero) %></th>
      <th><%= model_class.human_attribute_name(:nacionalidad) %></th>
      <th><%= model_class.human_attribute_name(:especialidad) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= link_to funcionario.id, funcionario_path(funcionario) %></td>
        <td><%= funcionario.ci %></td>
        <td><%= funcionario.nombres %></td>
        <td><%= funcionario.apellidos %></td>
        <td><%= funcionario.fnac %></td>
        <td><%= funcionario.lnac %></td>
        <td><%= funcionario.direccion %></td>
        <td><%= funcionario.telefono %></td>
        <td><%= funcionario.celular %></td>
        <td><%= funcionario.email %></td>
        <td><%= funcionario.est_civil %></td>
        <td><%= funcionario.genero %></td>
        <td><%= funcionario.nacionalidad %></td>
        <td><%= funcionario.especialidad %></td>
        <td><%=l funcionario.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_funcionario_path(funcionario), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      funcionario_path(funcionario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_funcionario_path,
            :class => 'btn btn-primary' %>
